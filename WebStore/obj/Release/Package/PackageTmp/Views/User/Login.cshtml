@model WebStore.Models.LoginModel
@{
    ViewBag.Title = "Login";
}
<style>
    .text-danger {
        color: red;
    }

    .detext {
        float: right;
    }

    .formtemp {
        width: 985px;
        margin: 0 auto
    }

    .debtn {
        width: 110px;
        height: 40px;
        background-color: cornflowerblue;
        float: right;
        margin-right: 36.5%;
    }

    .inner a {
        text-decoration: none;
        font-size: 12px;
        line-height: 20px;
        color: darkgrey;
    }

    .inner a:hover {
            color: #ffc107;
    }

    h2{
        color:orange;
    }

    .form-holder{
        color:skyblue;
    }

    h2 {
        color: teal;
    }

</style>

<h2><i class="fas fa-user"></i> Login</h2>
@using (Html.BeginForm("Login", "User", FormMethod.Post))
{
    @Html.ValidationMessage("Login", new { @class = "text-danger" })
<div class="inner">
    <div class="form-row">
        <div class="form-holder">
            <fieldset>
                <legend><i class="far fa-user"></i>&nbsp; UserName</legend>
                <input type="text" class="form-control " placeholder="Your UserName" id="UserNameLogin" name="TxtUserName" style="width:300px">  @*@Html.TextBoxFor(m => m.FName, new { @class = "form-control" })*@
            </fieldset>
        </div>
    </div>
    <div class="form-row">
        <div class="form-holder form-holder">
            <fieldset>
                <legend><i class="fas fa-user"></i>&nbsp; Password</legend>
                <input type="password" class="form-control " placeholder="Your Password" id="PasswordLogin" name="TxtPassWord" style="width:280px">
            </fieldset>
        </div>

    </div>
    <a href="#">Lost your password?</a><br>
    <a href="@Url.Action("Register", "User")">Don't have an account?</a>
    <input type="submit" class="btn btn-default debtn" value="Login" />
</div>
}
<h3> <font size="3" color="red">@ViewBag.Notification</font></h3>

