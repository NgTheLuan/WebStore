    <div id="content">
        @*<div style="color:royalblue; float:right ; font-size:large;">Hi! @Session["Logged"], have a good day </div>*@
        <div class="cleaner"></div>
        <h2><i class="fas fa-camera-retro"></i> Product</h2>
        @for (int i = 1; i <= Model.Count(); i++)
        {
            if (i % 3 == 2)
            {
                <div class="col col_14 product_gallery">
                    <a href="@Url.Action("ProductDetail","Product",new{ proid = Model[i - 1].ID_Product })"><img src="@Model[i - 1].Image" width="180" /></a>
                    <h3>@Model[i - 1].ProductName</h3>
                    <p class="product_price">$ @Model[i - 1].Price</p>
                    <a href="@Url.Action("AddtoCart", "Cart", new { IDPro = Model[i-1].ID_Product })" class="add_to_cart">Add To Cart</a>
                </div>
            }
            else
            {
                <div class="col col_14 product_gallery no_margin_right">
                    <a href="@Url.Action("ProductDetail","Product",new{ proid = Model[i - 1].ID_Product })"><img src="@Model[i - 1].Image" width="180" /></a>
                    <h3>@Model[i - 1].ProductName</h3>
                    <p class="product_price">$ @Model[i - 1].Price</p>
                    <a href="@Url.Action("AddtoCart", "Cart", new { IDPro = Model[i-1].ID_Product })" class="add_to_cart">Add To Cart</a>
                </div>
            }
        }

        @Html.Action("SaleProduct", "Product")


    </div> <!-- END of content -->
