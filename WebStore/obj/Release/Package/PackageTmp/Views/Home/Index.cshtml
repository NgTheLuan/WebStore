                <div id="SlideItMoo_items">
                    <div class="SlideItMoo_element">
                        <a href="#slide1" target="_parent">
                            <img src="https://salt.tikicdn.com/cache/w390/ts/product/c5/eb/03/f429dddf3cf537a09baae71049618192.jpg" width="120" alt="product 1" />
                        </a>
                    </div>
                    <div class="SlideItMoo_element">
                        <a href="#slide2" target="_parent">
                            <img src="https://salt.tikicdn.com/cache/w390/media/catalog/product/i/x/ixus-185-do-1.u2751.d20170327.t112757.200293.jpg" width="120" alt="product 2" />
                        </a>
                    </div>
                    <div class="SlideItMoo_element">
                        <a href="#slide3" target="_parent">
                            <img src="https://salt.tikicdn.com/cache/w390/ts/product/7e/ac/87/5ae17baf397c964f27cc28afc9fd7123.jpg" width="120" alt="product 3" />
